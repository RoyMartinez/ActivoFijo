<p>
    @Html.ActionLink("Ingresar Activo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.empleado1.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.oficina1.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.seguro1.numero)

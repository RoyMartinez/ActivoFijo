        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empleado1.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.oficina1.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.seguro1.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.subtipoactivo1.descripcion)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })

@model IEnumerable<Presentacion.Models.proformacab>

@{
    ViewBag.Title = "Cabecera de Proforma";
    ViewBag.Usuario = Presentacion.Globals.Globals.Usuario;
}

<h2>Cabecera de proforma</h2>

<p>
    @Html.ActionLink("Ingresar Nueva Cabecera", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.numeroserie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.proveedor1.empresa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numeroserie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.proveedor1.empresa)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |

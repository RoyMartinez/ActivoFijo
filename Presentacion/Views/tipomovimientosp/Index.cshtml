@model IEnumerable<Presentacion.Models.tipomovimiento>

@{
    ViewBag.Title = "Clasificacion de movimientos";
    ViewBag.Usuario = Presentacion.Globals.Globals.Usuario;
}

<h2>Clasificacion de movimientos</h2>

<p>
    @Html.ActionLink("Ingresar nueva Clasificacion", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

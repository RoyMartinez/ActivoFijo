@model IEnumerable<Presentacion.Models.movimiento>

@{
    ViewBag.Title = "Alta, Baja, Rotaciones";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Ingresar un movimiento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tiempoduracion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.empleado.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.empleado1.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipomovimiento1.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tiempoduracion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empleado.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empleado1.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipomovimiento1.descripcion)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
